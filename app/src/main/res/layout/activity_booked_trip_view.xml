<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookedTripViewActivity">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ridesharekccarpool"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/BookedViewDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasbeue_regular"
            android:text="drivername"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/BookedViewDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasbeue_regular"
            android:text="date"
            android:textColor="@color/black"
            android:textSize="20dp" />/>

        <TextView
            android:id="@+id/BookedViewFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasbeue_regular"
            android:text="from"
            android:textColor="@color/black"
            android:textSize="20dp" />/>

        <TextView
            android:id="@+id/BookedViewTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasbeue_regular"
            android:text="To"
            android:textColor="@color/black"
            android:textSize="20dp" />/>

        <TextView
            android:id="@+id/BookedViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasbeue_regular"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20dp" />/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasbeue_regular"
            android:onClick="cancelBookedTrip"
            android:text="Cancel Trip" />/>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nabBarBookedTripView"
        android:layout_alignParentBottom="true" />

</RelativeLayout >